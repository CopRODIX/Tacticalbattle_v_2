<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
      <item name="colorAccent">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:background">@color/main</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="tactical_ba">

        <item name="android:textSize">
            52sp
        </item>

        <item name="android:textColor">
            #0D30EC
        </item>

    </style>

    <style name="Text">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppThemeGame" parent="AppTheme.NoActionBar">


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>


    </style>
    <style name="AppThemeLogin..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLogin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="AppThemeRedister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeRedister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowIsFloating">false</item>
         <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
