<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tower">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.35"
        android:layout_height="0dp"
        android:background="@drawable/lin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginchange"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/emailchange"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent1"
            android:textSize="35sp"
            android:textStyle="bold|italic" />
        <EditText
            android:ems="10"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/login_email"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/newlogin"
            android:inputType="textPersonName"
            />


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textColor="@color/colorAccent1"
            android:textSize="30sp"
            android:id="@+id/chang"
            android:onClick="Changelogin"
            android:text="@string/loginchanging"
            android:background="@drawable/btn"
            android:shadowColor="@color/shadow"
            android:shadowDx="4"
            android:shadowDy="3"
            android:shadowRadius="10"
            android:layout_marginBottom="5dp"



            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>