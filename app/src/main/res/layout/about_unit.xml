<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main">

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />
    <LinearLayout

        android:id="@+id/st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:background="@color/main"
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"

                android:id="@+id/progress_health"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/my_progress_health" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dt_k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/main"
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weapon"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:id="@+id/progress_damage"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView1"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"

                android:progressDrawable="@drawable/my_progress_damage" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="25sp"
            android:background="@color/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/main"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:background="@drawable/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="@string/back"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:textColor="@color/colorText"
        android:shadowColor="#979797"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textAllCaps="true"
        android:textStyle="bold"/>

</LinearLayout>